{
/*
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
*/
  "AllowedHosts": "*",

  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "System": "Information",
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": 
          [
            {
              "Name": "Console",
              "Args": {
                "outputTemplate": "{Timestamp:yyyy/MM/dd HH:mm:ss.fff zzz} [{Application}] [{Level}] {Message}{NewLine}{Exception}"
              }
            },
            {
              "Name": "File",
              "Args": {
                "Path": "logs/log_.txt",
                "rollingInterval": "Day",
                "outputTemplate": "{Timestamp:yyyy/MM/dd HH:mm:ss.fff zzz} [{Application}] [{Level}] {Message}{NewLine}{Exception}"
                //"buffered": true
              }
            }
          ]
        }
      }
    ]
  }
  }
